{
  "name": "Bears-Team-1",
  "version": "0.1.0",
  "private": true,
  "cacheDirectories": ["node_modules"],
  "dependencies": {
    "@types/jest": "^22.1.4",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "mongoose": "^5.0.9",
    "node-sass-chokidar": "^0.0.3",
    "prettier": "^1.11.1",
    "lodash": "^4.17.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1"
  },
  "proxy": "http://localhost:3001",
  "scripts": {
    "start-server": "nodemon server/server.js",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css":
      "npm run build-css && node-sass-chokidar src/*.scss --output src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p start-server watch-css start-js",
    "heroku-postbuild": "npm run build",
    "build": "react-scripts build",
    "test": "mocha server/**/*.test.js",
    "test-watch": "nodemon --exec 'npm test'",
    "jest": "jest",
    "eject": "react-scripts eject",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "expect": "^22.4.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "mocha": "^5.0.1",
    "supertest": "^3.0.0",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.2"
  },
  "lint-staged": {
    "*.{js,scss,css,json,md}": ["prettier --write", "git add"],
    "mocha": "^5.0.1",
    "supertest": "^3.0.0"
  },
  "jest": {
    "testRegex": "(/__tests__/.|(\\.|/)(test|spec))\\.jsx?$"
  }
}
